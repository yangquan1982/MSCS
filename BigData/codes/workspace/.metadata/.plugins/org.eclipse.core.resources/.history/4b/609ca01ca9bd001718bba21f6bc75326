package lab1;

import java.util.ArrayList;
import java.util.HashMap;

public class Main {

	private static ArrayList<String> getWords(String SInput){

	    StringBuilder stringBuffer = new StringBuilder(SInput);
	    ArrayList<String> allWordsList = new ArrayList<String>();

	    String SWord = "";
	    for(int i=0; i<stringBuffer.length()-1; i++){
	        Character charAt = stringBuffer.charAt(i);
	        Character charNext = stringBuffer.charAt(i+1);
	        if((Character.isAlphabetic(charAt) && Character.isAlphabetic(charNext)) || 
	        		(Character.isAlphabetic(charAt) && charNext.equals('-'))){
	            SWord = SWord + charAt;
	        }
	        else{
	            if(!SWord.isEmpty()){
	            	String keyWord = new String(SWord);
	            	allWordsList.add(keyWord.toLowerCase());
	            }
	            SWord = "";
	        }
	    }
	    return allWordsList;

	}
	
	public static void main(String[] args) {
		String input = "Given a text-file input123,";
//		Pattern p = Pattern.compile("([A-Za-z])+('([A-Za-z])*)?");
//		Matcher m = p.matcher(input);
		HashMap output = new HashMap<String, Integer>();
	    System.out.println(getWords(input).toString());
	}
}
